/* pages/mydd/mydd.wxss */
.Mydd{
  width: 100%;
  box-sizing: border-box;
  padding-top: 100rpx;
  height: 100%;
}
.header{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
  z-index: 100;
}
/* 横向滚动 */
.recommend_scroll_x_box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 26rpx;
  height: 100rpx;
  white-space: nowrap; 
  overflow: hidden;
}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.recommend_hot_box{height: 100rpx; box-sizing: border-box; line-height: 100rpx; margin-right: 40rpx; display: inline-block; color: #333;font-size: 30rpx;padding: 0 10rpx;}
.recommend_hot_box:last-child{
  margin: 0;
}
.recommend_hot_box.active{ color: #ec1d3b;border-bottom: 4rpx solid #ec1d3b;}
.conbox{
  width: 100%;
  height: 100%;
}
.conbox .con{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-top: 20rpx;
}
.conbox .con .list{
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;

}
.conbox .con .list .top{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 23rpx;
}
.conbox .con .list .top image{
  width: 38rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.conbox .con .list .top .tit{
  font-size: 28rpx;
  color: #333;
  letter-spacing: 5rpx;
}
.conbox .con .list .top text{
  color: #00AD1C;
  font-size: 28rpx;
  margin-left: auto;
  letter-spacing: 3rpx;
}
.conbox .con .list .mid{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
}
.conbox .con .list .mid image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-right: 22rpx;
}
.conbox .con .list .mid .right{
  height: 180rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.conbox .con .list .mid .right .tit{
  line-height: 36rpx;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 2rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.conbox .con .list .mid .right .guige{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  
}
.conbox .con .list .mid .right .guige text{
  font-size: 24rpx;
  color: #666;
  margin-right: 17rpx;

}
.conbox .con .list .mid .right .moneyandnum{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.conbox .con .list .mid .right .moneyandnum .money{
  color: #F40643;
  font-size: 24rpx;
}
.conbox .con .list .mid .right .moneyandnum .num{
  color: #333;
  font-size: 26rpx;
}
.conbox .con .list .hejibox{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 50rpx;
}
.conbox .con .list .hejibox .heji{
  font-size: 26rpx;
  color: #333;
  letter-spacing: 5rpx;
}
.conbox .con .list .hejibox .money{
  color: #F40643;
  font-size: 32rpx;
  margin-left: auto;
  margin-right: 10rpx;
}
.conbox .con .list .hejibox .psmoney{
  color: #666;
  font-size: 22rpx;
}
.conbox .con .list .bottombox{
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;

}
.conbox .con .list .bottombox .huibox{
  width: 130rpx;
  height: 46rpx;
  color: #999;
  border:1rpx solid #999;
  border-radius: 46rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  text-align: center;
  margin-left: 20rpx;
}
.conbox .con .list .bottombox .redbox{
  width: 130rpx;
  height: 46rpx;
  color: #E31717;
  border:1rpx solid #E31717;
  border-radius: 46rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  text-align: center;
  margin-left: 20rpx;
}
.conbox .con .list .bottombox .redboxx{
  width: 130rpx;
  height: 46rpx;
  color: #fff;
  border:1rpx solid #E31717;
  background: #E31717;
  border-radius: 46rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  text-align: center;
  margin-left: 20rpx;
}
button{
  background: none;
  line-height: 1;
  overflow: visible;
  padding: 0;
  margin-right: 0;
}
button::after{
  border: none;
}
.button-hover{
  background: none;
}
.nogoods{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 200rpx;
}
.nogoods image{
  width: 340rpx;
  margin-bottom: 55rpx;
  margin-left: 70rpx;
}
.nogoods text{
  font-size: 30rpx;
  color: #666;
}
/* 弹出框 */
.tanbox{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
  left: 0;
  top: 0;
}
.tanbox .black{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2000;
  left: 0;
  top: 0;
  position: absolute;
}
.tanbox .conboxx{
  width: 450rpx;
  position: absolute;
  z-index: 3000;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  align-items: center;
  justify-content: center;
}

.tanbox .conboxshow {
  opacity: 1;
  transition: all 0.3s;
}

.tanbox .conboxhidden {
  opacity: 0;
  transition: all 0.3s;
}
.tanbox .blackshow {
  opacity: 1;
  transition: all 0.3s;
}

.tanbox .blackhidden {
  opacity: 0;
  transition: all 0.3s;
}