/* pages/adddizhi/adddizhi.wxss */
@import "../../../utils/public.wxss";/*引用图标*/
.Adddizhi{
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 32rpx;
}
.list{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}
.list text{
  font-size: 28rpx;
  color: #000;
}
.list input{
  width: 532rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;

}
.dwlist{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}
.dwlist .right{
  display: flex;
  width: 532rpx;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
}
.dwlist .right input{
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.dwlist .right .iconfont{
  font-size: 24rpx;
  color: #333;
  
}
.dwlist text{
  font-size: 28rpx;
  color: #000;
}
.morenlist{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.morenlist image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
}
.morenlist text{
  font-size: 30rpx;
  color: #333;
}
.btn{
  width: 100%;
  height: 84rpx;
  background: #E31717;
  font-size: 30rpx;
  color: #fff;
  border-radius: 84rpx;
  line-height: 84rpx;
  text-align: center;
  margin-top: auto;
  margin-bottom: 42rpx;
}
