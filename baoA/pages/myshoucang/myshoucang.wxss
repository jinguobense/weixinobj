/* pages/myshoucang/myshoucang.wxss */
.Myshoucang{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 100rpx;
}
.header{
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #DCDCDC;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
  display: flex;
  justify-content:center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.header .headerlist{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;

}
.header .headerlist.active{
  color: #FF5500;
}
.conbox{
  width: 100%;
  height: 100%;
}
.conbox .con{
  width: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.conbox .con .list{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin-bottom: 7rpx;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  left: 0;
  top: 0;
}
.conbox .con .list .del{
  position:absolute;
  z-index: -1;
  width: 200rpx;
  height: 200rpx;
  background: #EC1D3B;
  color: #fff;
  right: 0;
  top: 0;
  text-align: center;
  line-height: 200rpx;
}
.conbox .con .list .goodsimg{
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.conbox .con .list .tingshou{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  left: 28rpx;
  top: 25rpx;
}
.conbox .con .list .right{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.conbox .con .list .name{
  font-size: 28rpx;
  color: #333;
  line-height: 48rpx;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.moneybox{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.conbox .con .list .moneybox .money{
  font-size: 34rpx;
  color: #EC1D3B;
  margin-bottom: 15rpx;
}
.conbox .con .list .moneybox .ziqubq{
  font-size: 22rpx;
  color: #1895FF;
}
.conbox .con .list .moneybox .peisongbq{
  font-size: 22rpx;
  color: #FF8D42;
}
.conbox .con .list .dianright{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;

}
.conbox .con .list .dianright .dian{
  font-size: 28rpx;
  color: #333;
  width: 100%;
  margin-top: 10rpx;
}
.conbox .con .list .dianright .con{
  width: 100%;
  display: flex;
  height: 85rpx;
  margin-top: 10rpx;
}
.conbox .con .list .dianright .con image{
  width: 17rpx;
  height: 22rpx;
  margin-right: 7rpx;
  margin-top: 8rpx;
}
.conbox .con .list .dianright .con view{
  width: 490rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 80rpx;
}