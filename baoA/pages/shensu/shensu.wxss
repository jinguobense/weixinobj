/* pages/shensu/shensu.wxss */
.Shensu{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 94rpx;
}
.header{
  width: 100%;
  height: 94rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
}
.header .headerlist{
  width: 50%;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  font-size: 34rpx;
  color: #999999;

}
.header .headerlist.active{
  color: #F00F0F;
}
.header .redbox{
  width: 124rpx;
  height: 4rpx;
  background: #F00F0F;
  position: absolute;
  bottom: 0;
  left: 126rpx;
}
.header .redbox.redl{
  /* transform: translateX(-374rpx); */
  left: 126rpx;
  transition: all 0.5s;
}
.header .redbox.redr{
  /* transform: translateX(374rpx); */
  left: 500rpx;
  transition: all 0.5s;
}
.con{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  padding-top: 20rpx;
}
.con .list{
  width: 100%;
  height: 200rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.con .list .top{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.con .list .top .tit{
  color: #333;
}
.con .list .top .titcon{
  color: #666;
}
.con .list .timebox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 35rpx;
}
.con .list .timebox .time{
  font-size: 22rpx;
  color: #999;
}
.con .list .timebox text{
  font-size: 24rpx;
  color: #666;
}