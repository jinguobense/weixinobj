/* pages/newuser/newuser.wxss */
/* 轮播图 */
.Newuser{
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}
.banner{
  width: 750rpx;
  height: 245rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 横向滚动 */
.recommend_scroll_x_box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 26rpx;
  height: 96rpx;
  white-space: nowrap; 
  display: flex; 
  margin-top: auto;
  background: #fff;
  /* box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35); */
}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.recommend_hot_box{height: 96rpx; box-sizing: border-box; line-height: 96rpx; margin-right: 15rpx; display: inline-block; color: #333;font-size: 32rpx;padding: 0 15rpx;}
.recommend_hot_box.active{ color: #ec1d3b;border-bottom: 2rpx solid #ec1d3b;}
/* 内容 */
.conbox{
  width: 100%;
  box-sizing: border-box;
  padding:0 26rpx;
  padding-top: 15rpx;
}
.conbox .list{
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.conbox .list .shopimg{
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
  border-radius: 10rpx;
}
.conbox .list .con{
  width: 440rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.conbox .list .con .top{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.conbox .list .con .top image{
  width: 36rpx;
  height: 36rpx;
}
.conbox .list .con .top view{
  font-size: 30rpx;
  color: #333;
  margin-left: 7rpx; 
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 320rpx;
}
.conbox .list .con .top text{
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}
.conbox .list .con .mid{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width: 100%;
  font-size: 28rpx;
  color: #333;
}
.conbox .list .con .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;

}
.conbox .list .con .bottom .bleft{
  display: flex;
  align-items: flex-end;
}
.conbox .list .con .bottom .bleft .qian{
  font-size: 24rpx;
  color: #e02627;
  line-height: 28rpx;
}
.conbox .list .con .bottom .bleft .money{
  font-size: 30rpx;
  color: #e02627;
  line-height: 1;
  margin-right: 13rpx;
}
.conbox .list .con .bottom .bleft .yuanjia{
  font-size: 26rpx;
  color: #999;
  line-height: 1;
  text-decoration: line-through;
}
.conbox .list .con .bottom .bright{
  font-size: 24rpx;
  color: #fff;
  padding: 8rpx 21rpx;
  background: #e61a0f;
  border-radius: 40rpx;

}
.nogoods{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 200rpx;
}
.nogoods image{
  width: 340rpx;
  margin-bottom: 55rpx;
}
.nogoods text{
  font-size: 30rpx;
  color: #333;
}