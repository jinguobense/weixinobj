 /* pages/manjianmore/manjianmore.wxss */
 .Manjianmore{
   box-sizing: border-box;
   padding-top: 160rpx;
 }
.header{
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  padding: 30rpx 25rpx;
  background: #fff;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.header image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.header .center{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-around;
  margin-right: 15rpx;
  flex: 1;
}
.header .center .tit{
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.header .center .manjianxx{
  font-size: 26rpx;
  color: #fe8a2d;
}
/* 内容框 */
.listbox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 25rpx;
  padding-bottom: 20rpx;
}
.listbox .list{
  width: 345rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  border: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding-bottom: 15rpx;
}
.listbox .list image{
  width: 345rpx;
  height: 345rpx;
}
.listbox .list .listcon{
  width: 345rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.listbox .list .listcon .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx 0;
}

.listbox .list .listcon .tit .name{
  color: #333;
  letter-spacing: 2rpx;
  font-size: 28rpx;
  line-height: 1;
}
.listbox .list .listcon .bottom{
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 10rpx;
}
.listbox .list .listcon .bottom .money{
  display: flex;
  justify-content: start;
  align-items: flex-end;
}

.listbox .list .listcon .bottom .money text:nth-of-type(1){
  font-size: 24rpx;
  color: #E9130D;
}
.listbox .list .listcon .bottom .money text:nth-of-type(2){
  font-size: 32rpx;
  color: #E9130D;
  line-height: 1;
}
.listbox .list .listcon .bottom .money view{
  font-size: 24rpx;
  color: #999;
}

