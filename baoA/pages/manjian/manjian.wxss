/* pages/manjian/manjian.wxss */
@import "../../../utils/public.wxss";/*引用图标*/
/* 轮播图 */
.banner{
  width: 750rpx;
  height: 292rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 店铺列表 */
.shopbox{
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

}
.shopbox .shoplist{
  width: 710rpx;
  height: 690rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.shopbox .shoplist .listheader{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.shopbox .shoplist .listheader image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.shopbox .shoplist .listheader .center{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-around;
  margin-right: 15rpx;
  flex: 1;
}
.shopbox .shoplist .listheader .center .tit{
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.shopbox .shoplist .listheader .center .manjianxx{
  font-size: 26rpx;
  color: #fe8a2d;
}
.shopbox .shoplist .listheader .right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.shopbox .shoplist .listheader .right text{
  font-size: 24rpx;
  color: #333;

}
.shopbox .shoplist .listheader .right .iconfont{
  font-size: 24rpx;
  color: #333;
}
/* 内容框 */
.listbox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.listbox .list{
  width: 325rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  box-shadow: 0rpx 3rpx 5rpx rgba(9, 9, 9, 0.2);

}
.listbox .list image{
  width: 325rpx;
  height: 325rpx;
}
.listbox .list .listcon{
  width: 325rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.listbox .list .listcon .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx 0;
  height: 95rpx;

}

.listbox .list .listcon .tit .name{
  color: #333;
  letter-spacing: 2rpx;
  font-size: 30rpx;
  line-height: 1;
}
.listbox .list .listcon .bottom{
  display: flex;
  justify-content: start;
  align-items: flex-end;
  margin-top: 15rpx;
}
.listbox .list .listcon .bottom .qian{
  font-size: 24rpx;
  color: #E9130D;
}

.listbox .list .listcon .bottom .money{
  font-size: 36rpx;
  color: #E9130D;
  line-height: 1;
}
.nogoods{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 300rpx;
}
.nogoods image{
  width: 340rpx;
  margin-bottom: 55rpx;
}
.nogoods text{
  font-size: 30rpx;
  color: #333;
}
