/* pages/toyaoqing/toyaoqing.wxss */
.header{
  width: 100%;
  height: 400rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 56rpx 48rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;


}
.canvasimg {
  width: 500rpx;
  height: 400rpx;
}
.header image{
  width: 288rpx;
  height: 288rpx;
}
.header .goodxq{
  width: 345rpx;
  height: 288rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 0;
  letter-spacing: 4rpx;
}
.header .goodxq .tit{
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.header .goodxq .money{
  font-size: 50rpx;
  color: #dd0000;
}
.conbox{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 38rpx;
}
.conbox .imgbox{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.conbox .imgbox image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin: 25rpx 20rpx;
}
.conbox .tishicon{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
.conbox .tishicon .left text{
  font-size: 30rpx;
  color: #333;

}
.conbox .tishicon .left .red{
  color: #dd0000; 
}
.conbox .tishicon .right{
  display: flex;
  align-items: center;
  margin-left: 70rpx;
}
.conbox .tishicon .right .time{
  font-size: 30rpx;
  color: #dd0000;
}
.conbox .tishicon .right text{
  font-size: 26rpx;
  color: #dd0000;
}
.conbox .btn{
  width: 100%;
  height: 80rpx;
  background: #e02f25;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #fff;
  border-radius: 10rpx;
}
button{
  padding: 0;
  border: none;
  overflow: visible;
}
button::after{
  border: none;
}