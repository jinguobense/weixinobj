.Shouquan{
  width:100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  margin-top: 150rpx;
  width: 140rpx;  
  height: 140rpx;
  border-radius: 20rpx;
}
.name{
  font-size: 34rpx;
  color: #333;
  margin-top: 30rpx;
}
.con{
  font-size: 26rpx;
  color: #999;
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  margin-top: 100rpx;
}
.btn{
  font-size: 30rpx;
  color: #fff;
  width: 650rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #E9130D;
  margin-top: 100rpx;

}