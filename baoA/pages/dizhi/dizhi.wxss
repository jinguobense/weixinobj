/* pages/dizhi/dizhi.wxss */
.Dizhi{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 32rpx;
  overflow-y: auto;
  padding-bottom: 130rpx;
}
.list{
  width: 100%;
  height: 266rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 26rpx;
  justify-content: flex-start;
  padding-top: 20rpx;

}
.list .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.list .top .name{
  font-size: 28rpx;
  color: #333;

}
.list .top .tel{
  font-size: 28rpx;
  color: #333;

}
.list .mid{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}
.list .bottom{
  width: 100%;
  height: 70rpx;
  margin-top: auto;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .bottom .leftdizhi{
  display: flex;
  justify-content: start;
  align-items: center;
  height: 100%;
}
.list .bottom .leftdizhi image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 15rpx;
}
.list .bottom .leftdizhi text{
  font-size: 22rpx;
  color: #333;

}
.list .bottom .bianji{
  display: flex;
  justify-content: start;
  align-items: center;
  margin-left: auto;
  margin-right: 60rpx;
  height: 100%;

}
.list .bottom .bianji image{
  width: 33rpx;
  height: 33rpx;
  margin-right: 15rpx;
}
.list .bottom .bianji text{
  font-size: 22rpx;
  color: #333;
}
.list .bottom .del{
  font-size: 22rpx;
  color: #333;
  height: 100%;
  display: flex;
  align-items: center;
}
.no{
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}
.foot{
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 32rpx;
}
.foot .btn{
  width: 100%;
  height: 70rpx;
  border-radius: 70rpx;
  background: #E31717;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 5rpx;
}
.nogoods{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.nogoods image{
  width: 575rpx;
  margin-bottom: 55rpx;
}
.nogoods text{
  font-size: 30rpx;
  color: #666;
}