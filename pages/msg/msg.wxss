/* pages/msg/msg.wxss */
.Msg{
  width: 100%;
  height: 100%;
  background: #fff;
  overflow-y: auto;
}
.header{
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.header .list{
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.header .list image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 30rpx;
}
.header .list text{
  font-size: 26rpx;
  color: #333;
}
.header .list .biaoqian{
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  background: #E31111;
  color: #fff;
  font-size: 18rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 50%;
  right: 46rpx;
  top: 36rpx;
}
.msglist{
  width: 100%;
  height: 164rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.msglist image{
  width: 96rpx;
  height: 96rpx;
  border-radius:15rpx;
  margin-right: 20rpx;
}
.msglist .listcon{
  flex: 1;
  height: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 0; 
}
.msglist .listcon .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.msglist .listcon .top .name{
  font-size: 28rpx;
  color: #333;
}
.msglist .listcon .top .time{
  font-size: 22rpx;
  color: #999;
}
.msglist .listcon .bottom{
  width: 570rpx;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}