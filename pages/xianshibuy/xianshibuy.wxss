/* pages/xianshibuy/xianshibuy.wxss */
/* 头部 */
.header{
  width: 100%;
  background: #fff;
}
.header .headtabbox{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.header .headtabbox view{
  width: 50%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.header .headtabbox view.active{
  color: #E9130D;
}
.recommend_scroll_x_box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  height: 80rpx;
  white-space: nowrap; 
  display: flex; 
  margin-top: 3rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.recommend_hot_box{height: 80rpx; box-sizing: border-box; line-height: 80rpx; margin-right: 15rpx; display: inline-block; color: #333;font-size: 30rpx;padding: 0 25rpx;}
.recommend_hot_box.active{ color: #E9130D;border-bottom: 4rpx solid #E9130D;}
/* 内容框 */
.listbox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.listbox .list{
  width: 345rpx;
  height: 545rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  margin-top: 10rpx;
}
.listbox .list image{
  width: 345rpx;
  height: 330rpx;
}
.listbox .list .listcon{
  width: 345rpx;
  height: 150rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.listbox .list .listcon .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx 0;
}

.listbox .list .listcon .tit .name{
  color: #333;
  letter-spacing: 2rpx;
  font-size: 26rpx;
  line-height: 1;
}
.listbox .list .listcon .bottom{  
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.listbox .list .listcon .bottom .money{
  display: flex;
  justify-content: start;
  align-items: center;
}
.listbox .list .listcon .bottom .yishou{
  font-size: 24rpx;
  color: #999;
}

.listbox .list .listcon .bottom .money text:nth-of-type(1){
  font-size: 28rpx;
  color: #E9130D;
}
.listbox .list .listcon .bottom .money text:nth-of-type(2){
  font-size: 22rpx;
  color: #999;
}
.listbox .list .listcon .danmai{
  font-size: 22rpx;
  color: #999;
  margin: 10rpx 0;
}
.listbox .list .listcon .yipin{
  font-size: 22rpx;
  color: #999;
}
.listbox .list .listcon .redtimebox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}
.listbox .list .listcon .redtimebox view{
  font-size: 24rpx;
  color: #DA4242;
  
}
.listbox .list .listcon .redtimebox text{
  font-size: 24rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  background: #DA4242;
  margin-left: 10rpx;
  border-radius: 10rpx;
}
.listbox .list .listcon .graytimebox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}
.listbox .list .listcon .graytimebox view{
  font-size: 24rpx;
  color: #848484;
  
}
.listbox .list .listcon .graytimebox text{
  font-size: 24rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  background: #848484;
  margin-left: 10rpx;
  border-radius: 10rpx;
}