/* pages/tongzhi/tongzhi.wxss */
.Tongzhi{
  width: 100%;
  height: 100%;
  background: #fff;

}
.header{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .tit{
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 5rpx;
}
.header .time{
  font-size: 24rpx;
  color: #999;
}
.line{
  width: 750rpx;
  height: 11rpx;
  display: block;
}
.con{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 46rpx;
}