/* pages/tongzhilist/tongzhilist.wxss */
.tongzhilist{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 30rpx;
  overflow-y: auto;
}
.list{
  width: 100%;
  height: 280rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  
}
.list .top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 25rpx 0;
}
.list .top .type{
  font-size: 32rpx;
  color: #333;
  
}
.list .top .time{
  font-size: 22rpx;
  color: #999;
  margin-right: 25rpx;
}
.list .conbox{
  width: 100%;
  height: 166rpx;
  border-radius: 10rpx;
  background: #F9F9F9;
  display: flex;
  justify-content: flex-start;
  align-items: center;

}
.list .conbox image{
  width:166rpx;
  height: 166rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.list .conbox .right{
   width: 430rpx;
   height: 100%;
   display: flex;
   flex-direction: column;
   justify-content: center;
}
.list .conbox .right .tit{
  width: 100%;
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 35rpx;
}
.list .conbox .right .rbottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .conbox .right .rbottom .bianhao{
  font-size: 22rpx;
  color: #999;
  width: 320rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list .conbox .right .rbottom .con{
  font-size: 22rpx;
  color: #999;
}