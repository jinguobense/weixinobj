/* pages/shensuxq/shensuxq.wxss */
.Shensuxq{
  width: 100%;
  height: 100%;
  background: #fff;
  overflow-y: auto;
}
.header{
  height: 120rpx;
  width:100%;
  border-bottom: 8rpx solid #f2f2f2;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;

}
.header .top{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.header .top .left{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  width: 550rpx;
}
.header .top .left .tit{
  color: #333;

}
.header .top .left .titcon{
  color: #666;
}
.header .top .right{
  color: #E31718;
  font-size: 22rpx;
}
.header .time{
  color: #666;
  font-size: 20rpx;
  margin-left: 15rpx;
}
.conbox{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 35rpx;
}
.conbox .tit{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
}
.conbox .con{
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;
}