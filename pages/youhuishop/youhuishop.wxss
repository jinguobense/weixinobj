/* pages/youhuishop/youhuishop.wxss */
.headbox{
  width: 100%;
  height: 150rpx;
  background: #fff;
}
.headbox .searchbox{
  width: 674rpx;
  height: 66rpx;
  background: #F4F4F4;
  border-radius: 66rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.headbox .searchbox input{
  font-size: 28rpx;
  letter-spacing: 3rpx;
  width: 530rpx;
  margin-left: 50rpx;
  margin-right: 10rpx;
}
/* 类别框 */
/* 横向滚动 */
.recommend_scroll_x_box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  height: 80rpx;
  white-space: nowrap; 
  display: flex; 
  margin-top: 3rpx;
}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.recommend_hot_box{height: 80rpx; box-sizing: border-box; line-height: 80rpx; margin-right: 15rpx; display: inline-block; color: #333;font-size: 30rpx;padding: 0 25rpx;}
.recommend_hot_box.active{ color: #E9130D;border-bottom: 4rpx solid #E9130D;}
/* 内容框 */
.listbox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.listbox .list{
  width: 345rpx;
  height: 510rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  margin-top: 10rpx;
}
.listbox .list image{
  width: 345rpx;
  height: 340rpx;
}
.listbox .list .listcon{
  width: 345rpx;
  height: 150rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.listbox .list .listcon .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx 0;
}
.listbox .list .listcon .tit .biaoqian{
  padding: 5rpx 10rpx;
  border: 1rpx solid #E9130D;
  border-radius: 10rpx;
  color: #E9130D;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.listbox .list .listcon .tit .name{
  color: #333;
  letter-spacing: 4rpx;
  font-size: 26rpx;
  line-height: 1;
}
.listbox .list .listcon .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listbox .list .listcon .bottom .money text:nth-of-type(1){
  font-size: 26rpx;
  color: #E9130D;
}
.listbox .list .listcon .bottom .money text:nth-of-type(2){
  font-size: 22rpx;
  color: #999;
}
.listbox .list .listcon .bottom .juli{
  font-size: 18rpx;
  color: #999;
}