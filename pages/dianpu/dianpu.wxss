.Foot .conbox .rightcon{
  width: 570rpx;
  height: 100%;
  background: #F6F6F6;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  overflow-y: auto;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 10rpx;
  background: #fff;
  padding-bottom: 100rpx;
}
.Foot .conbox .rightcon .list{
  width: 100%;
  height: 208rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
  padding: 25rpx 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.Foot .conbox .rightcon .list image{
  width: 154rpx;
  height: 154rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.Foot .conbox .rightcon .list .listcon{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.Foot .conbox .rightcon .list .listcon .tit{
  width: 100%;
  font-size: 22rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 36rpx;
  margin-bottom: 10rpx;
}
.Foot .conbox .rightcon .list .listcon .bottom{
  display: flex;
  width: 100%;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
.Foot .conbox .rightcon .list .listcon .bottom .left{
  display: flex;
  flex-direction: column;

}
.Foot .conbox .rightcon .list .listcon .bottom .left .money{
  font-size: 24rpx;
  color: #E31718;
  margin-bottom: 10rpx;
}
.Foot .conbox .rightcon .list .listcon .bottom .left .xiaoliang{
  color: #999;
  font-size: 22rpx;
}
.Foot .conbox .rightcon .list .listcon .bottom .btn{
  width: 116rpx;
  height: 42rpx;
  color: #333;
  border: 1rpx solid #333;
  border-radius: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 24rpx;
}
/* 回到顶部图片 */
.up{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 240rpx;
  right: -80rpx;
  z-index: 100;
}
.upshow {
  transform: translateX(-80rpx);
  transition: all 0.5s;
}

.uphidden {
  transform: translateX(80rpx);
  transition: all 0.7s;
}
