.Foot .conbox{
  width: 100%;
  flex: 1;
  position: relative;
}
/* 左部tab切换 */
.Foot .conbox .lefttab{
  width: 180rpx;
  height: 100%;
  background: #F6F6F6;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  overflow-y: auto;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.Foot .conbox .lefttab .list{
  width: 100%;
  height: 100rpx;
  background: #F6F6F6;
  text-align: center;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
  border-left: 4rpx solid #F6F6F6;
  letter-spacing: 2rpx;
  border-bottom: 1rpx solid #f4f4f4;
  border-top: 1rpx solid #f4f4f4;
}
.Foot .conbox .lefttab .active{
  color: #E90D16;
  box-sizing: border-box;
  border-left: 4rpx solid #E90D16;
