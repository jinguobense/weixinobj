/* 店信息框 */
.dianxxbox{
  width: 100%;
  height: 232rpx;
  background: #fff;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  display: flex;
  flex-direction: column;
}
.dianxxbox .top{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.dianxxbox .top>image{
  width: 21rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.dianxxbox .top .dizhi{
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
