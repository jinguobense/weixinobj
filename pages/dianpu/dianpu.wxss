}
/* 底部大框 */
.Foot{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.Foot.active{
  position: fixed;
  top: 0;
  left: 0;
  
}
.Foot .headbox{
  width: 100%;
  height: 124rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;

}
.Foot .headbox .searchbox{
  width: 100%;
  height: 70rpx;
  background: #F4F4F4;
  border-radius: 70rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
