  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.dianxxbox .top .fenxiangbox{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: auto;
  margin-right: 15rpx;
}
.dianxxbox .top .fenxiangbox image{
  width: 31rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}
.dianxxbox .top .fenxiangbox text{
  color: #666;
  font-size: 22rpx;
}
.dianxxbox .bottom{
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;

}
.dianxxbox .bottom .bleft{
  display: flex;
  flex-direction: column;
}
.dianxxbox .bottom .bleft .timebox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 15rpx;
}
.dianxxbox .bottom .bleft .timebox image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 20rpx;
}
.dianxxbox .bottom .bleft .timebox text{
  font-size: 26rpx;
  color: #333;

}
.dianxxbox .bottom .bleft .tishi{
  font-size: 24rpx;
  color: #999;
  margin-left: 44rpx;
}
.dianxxbox .bottom .bright{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100%;
  
}
.dianxxbox .bottom .bright .rlist{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 15rpx;
}
.dianxxbox .bottom .bright .rlist image{
  margin-bottom: 10rpx;
}
.dianxxbox .bottom .bright .rlist:nth-of-type(1) image{
  width: 35rpx;
  height: 35rpx;
}
.dianxxbox .bottom .bright .rlist:nth-of-type(2) image{
  width: 35rpx;
  height: 35rpx;
}
.dianxxbox .bottom .bright .rlist text{
  color: #666;
  font-size: 22rpx;
}
/* 活动专区 */
.huodongbox{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
