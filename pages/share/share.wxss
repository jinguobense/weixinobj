/* pages/share/share.wxss */
.Share{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.conbox{
  width: 600rpx;
  height: 800rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.conbox image{
  width: 530rpx;
  height: 530rpx;
  margin-top: 40rpx;
  margin-bottom: 70rpx;
}
.conbox text{
  font-size: 30rpx;
  color: #333;
}
.btn{
  position: fixed;
  width: 100%;
  height: 120rpx;
  bottom: 0;
  left: 0;
  color: #fff;
  font-size: 38rpx;
  background: #DA1101;
  text-align: center;
  line-height: 120rpx;
}