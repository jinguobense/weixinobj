/* pages/near/near.wxss */
.Near{
  width: 100%;
  box-sizing: border-box;
  padding-top: 150rpx;
}
.headbox{
  width: 100%;
  height: 150rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 0 0 5px 2px rgba(144, 144, 144, 0.35);
  z-index: 100;
}
.headbox .searchbox{
  width: 674rpx;
  height: 66rpx;
  background: #F4F4F4;
  border-radius: 66rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
} 
.headbox .searchbox view{
  flex: 1;
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
}
.headbox .searchbox input{
  font-size: 28rpx;
  width: 500rpx;
  margin-left: 50rpx;
  margin-right: 10rpx;
}
/* 类别框 */
/* 横向滚动 */
.recommend_scroll_x_box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  height: 80rpx;
  white-space: nowrap; 
  display: flex; 
  margin-top: 3rpx;
}
::-webkit-scrollbar{width: 0; height: 0; color: transparent;}
.recommend_hot_box{height: 80rpx; box-sizing: border-box; line-height: 80rpx; margin-right: 15rpx; display: inline-block; color: #333;font-size: 30rpx;padding: 0 25rpx;}
.recommend_hot_box.active{ color: #E9130D;border-bottom: 4rpx solid #E9130D;}
/* 内容框 */
.listbox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}
.listpubu{
  width: 345rpx;

}
.listbox .list{
  width: 345rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  padding-bottom: 15rpx;
}
.listbox .list .imgbox {
  width: 345rpx;
  height: 345rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.listbox .list .imgbox .peisongimg {
  position: absolute;
  left: 0;
  top: 0;
  width: 146rpx;
  height: 42rpx;
}

.listbox .list .imgbox .img {
  width: 345rpx;
  height: 345rpx;
}

.listbox .list .imgbox .shopnamebg {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 42rpx;
  box-sizing: border-box;
  padding: 0 12rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
}
.listbox .list .imgbox .shopnamebg>view{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 20rpx;
  color: #FFFFFF;
}
.listbox .list .listcon{
  width: 345rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.listbox .list .listcon .tit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx 0;
  margin-bottom: 10rpx;
}
.listbox .list .listcon .tit .biaoqian{
  padding: 3rpx 7rpx;
  border: 1rpx solid #ff002b;
  border-radius: 10rpx;
  color: #ff002b;
  font-size: 22rpx;
  margin-right: 10rpx;
  transform: rotateZ(360deg);
}
.listbox .list .listcon .tit .name{
  color: #333;
  letter-spacing: 2rpx;
  font-size: 28rpx;
  line-height: 1;
}
.listbox .list .listcon .danmai{
  font-size:22rpx;
  color: #999;
  margin-bottom: 15rpx;
}
.listbox .list .listcon .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listbox .list .listcon .bottom .money{
  display: flex;
  align-items: flex-end;

}
.listbox .list .listcon .bottom .money text:nth-of-type(1){
  font-size: 24rpx;
  color: #E9130D;
}
.listbox .list .listcon .bottom .money text:nth-of-type(2){
  font-size: 32rpx;
  color: #E9130D;
  line-height: 1;
}
.listbox .list .listcon .bottom .money text:nth-of-type(3){
  font-size: 22rpx;
  color: #999;
}
.listbox .list .listcon .bottom .juli{
  font-size: 22rpx;
  color: #999;
}
.nogoods{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 200rpx;
}
.nogoods image{
  width: 340rpx;
  margin-bottom: 55rpx;
}
.nogoods text{
  font-size: 30rpx;
  color: #333;
}