/**index.wxss**/
.bg{
  width: 750rpx;
  height: 300rpx;
}
/* 头部 */
.head{
  width: 100%;
  height: 96rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
   
}
.dingweiicon{
  height: 40rpx;
  width: 32rpx;
  margin-left: 26rpx;
  margin-right: 12rpx;
}
.dingwei{
  font-size: 22rpx;
  color: #fff;
  margin-right: 18rpx;
}
.sousuobox{
  width: 474rpx; 
  height: 56rpx; 
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 24rpx;
}
.sousuobox icon:nth-of-type(1){
  margin-left: 28rpx;
  margin-right: 18rpx;
}
.sousuobox input{
  font-size: 22rpx;
  width: 350rpx;
  margin-right: 10rpx;
}

.msgicon{
  height: 50rpx;
  width: 56rpx;
}
/* 轮播图 */
.banner{
  width: 700rpx;
  height: 314rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 96rpx;
  overflow: hidden;
  left: 25rpx;

}
.banner image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/* 中间块 */
.centerbox{
  width: 100%;
  min-height: 800rpx;
  background: #fff;
  box-sizing: border-box;
  padding-top: 135rpx;
}
.fenleicon{
  width: 700rpx;
  margin: 0 25rpx;
  height: 140rpx;
}
.fenleicon .fenleilist{
  width: 156rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.fenleicon .fenleilist image{
  width: 80rpx;
  height: 80rpx;

}
.fenleicon .fenleilist text{
  font-size: 26rpx;
  color: #333;
}
/* 参团图片 */
.cantuan{
  width:723rpx;
  height: 187rpx;
  margin-top: 20rpx;
}
/* 推荐好店标题 */
.tuijiantitbox{
  width: 750rpx;  
  height: 88rpx; 
  position: relative;
  margin-top: 20rpx;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}
.tuijiantitbox .xianbg{
  width: 750rpx;
  height: 88rpx;
  position: absolute;
  left: 0;
  top: 0;

}
.tuijiantitbox>text{
  font-size: 34rpx; 
  color: #333;
  font-weight: 700;
  letter-spacing: 10rpx;
}
.tuijiantitbox .right{
  position: absolute;
  width: 80rpx;
  height: 100%;
  top: 0;
  right: 25rpx;
  z-index: 5;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.tuijiantitbox .right text{
  font-size: 22rpx;
  color: #333;
  margin-right: 8rpx;
}
.tuijiantitbox .right image{
  width: 8rpx;
  height: 22rpx;
}
/* 推荐好店内容 */
.tuijiancon{
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.tuijianlist{
  width: 100%;
  height: 194rpx;
  padding: 30rpx 0;
}
.tuijianlist image{
  width: 194rpx; 
  height: 194rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.tuijianlist .rightcon{
  width: 486rpx;
  height: 194rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.tuijianlist .rightcon .toptit{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tuijianlist .rightcon .toptit text{
  font-size: 26rpx;
  color: #333;
}
.tuijianlist .rightcon .toptit .starbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tuijianlist .rightcon .toptit .starbox image{
  width: 21rpx;
  height: 20rpx;
  padding: 0;
  display: block;
  margin: 0 2rpx;
}
.tuijianlist .rightcon .centercon{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 15rpx;
}
.tuijianlist .rightcon .centercon text{
  display: block;
  width: 46rpx;
  height: 24rpx;
  text-align: center;
  line-height: 24rpx;
  color: #fff;
  background: #E21111;
  border-radius: 5rpx;
  margin-right: 10rpx;
  font-size: 16rpx;
}
.tuijianlist .rightcon .centercon view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #333;
}
.tuijianlist .rightcon .money{
  font-size: 28rpx;
  color: #E21111;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}
.tuijianlist .rightcon .bottomcon{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tuijianlist .rightcon .bottomcon .yishou{
  font-size: 20rpx;
  color: #666666;

}
.tuijianlist .rightcon .bottomcon .juli{
  font-size: 20rpx;
  color: #666666;
  
}
/* 推荐商品 */
.tuijianshop{
  width: 100%;
  min-height: 600rpx;
  margin-top: 10rpx;
}
.tabbox{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 0 25rpx;
  background: #fff;
}
.tabbox .tablist{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabbox .tablist text{
  font-size: 32rpx;
  padding: 12rpx 0;
  color: #333;
  border-bottom: 5rpx solid #fff;
}
.tabbox .tablist .active{
  color: #E9130D;
  border-bottom: 5rpx solid #E9130D;
}
.listbox{
  width: 100%;
  min-height: 550rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
  padding-bottom: 20rpx;
}
.listcon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  
}
.listcon .list{
  width: 345rpx;
  background: #fff;
  margin-top: 10rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.listcon .list .img{
  width: 345rpx;
  height: 345rpx;
}
.listcon .list .con{
  width: 100%;
  box-sizing: border-box;
  padding: 0 12rpx;
  padding-bottom: 20rpx;
}
.listcon .list .tit{
  font-size: 24rpx;
  color: #333;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
}
.listcon .list .moneybox{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.listcon .list .moneybox .biaoqian{
  color: #FF002B;
  font-size: 24rpx;
  width: 60rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border: 1px solid #FF002B;
  border-radius: 5rpx;
  margin-right: 5rpx;
}
.listcon .list .moneybox text{
  color: #FF002B;
  font-size: 26rpx;
}
.listcon .list .moneybox view:nth-of-type(2){
  color: #9D9D9D;
  font-size: 26rpx;
}
.listcon .list .danmai{
  font-size:20rpx;
  color: #999;
  margin-bottom: 15rpx;
}
.listcon .list .yuanjia{
  font-size:20rpx;
  color: #999;
  margin-bottom: 15rpx;
  text-decoration: line-through;
}

.listcon .list .pingji{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
}
.listcon .list .pingji text{
  color: #999;
  font-size: 20rpx;
  margin-right: 5rpx;
}
.listcon .list .pingji .starbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listcon .list .pingji .starbox image{
  width: 21rpx;
  height: 20rpx;
  padding: 0;
  display: block;
  margin: 0 2rpx;
}
