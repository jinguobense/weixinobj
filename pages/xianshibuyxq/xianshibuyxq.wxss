@import "../../utils/public.wxss";/*引用图标*/
.Pintuanxq{
  box-sizing: border-box;
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  overflow-y: auto;
  height: 100%;
}
/* 头部 */
.header{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 190rpx;
  align-items: center;
  z-index: 10;

}
.header .list{
  font-size: 32rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.header .list.active{
  color: #E31718;
  border-bottom: 4rpx solid #E31718;
}
.header image{
  position: absolute;
  right: 30rpx;
  top: 32rpx;
  width: 42rpx;
  height: 44rpx;
}
/* 轮播图 */
.banner{
  width: 750rpx;
  height: 750rpx;
  
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 商品信息 */ 
.shopbox{
  width: 100%;
  height: 214rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column; 
  padding: 0 30rpx;
  background: #fff;
  overflow: hidden;
}
.shopbox .tit{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;

}
.shopbox .tit .titleft{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.shopbox .tit .titleft .money{
  font-size: 38rpx;
  color: #EC1D3B;
}
.shopbox .tit .titleft .danwei{
  color: #999;
  margin-top: 5rpx;
  font-size: 22rpx;
}
.shopbox .tit .titleft .danmai{
  color: #999;
  font-size: 22rpx;
  margin-top: 5rpx;
  margin-left: 25rpx;

}
.shopbox .tit .titright{
  display: flex;
  justify-content: space-between;

}
.shopbox .tit .titright .list{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 35rpx;
}
.shopbox .tit .titright .list image{
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 15rpx;
}
.shopbox .tit .titright .list text{
  font-size: 20rpx;
  color: #333;
}
.shopbox .con{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  box-sizing: border-box;
  line-height: 40rpx;
}
.shopbox .con .biaoqian{
  padding: 5rpx 10rpx;
  border: 1rpx solid #E9130D;
  border-radius: 10rpx;
  color: #E9130D;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.shopbox .con .name{
  color: #333;
  letter-spacing: 2rpx;
  font-size:28rpx;
  line-height: 1;
}
