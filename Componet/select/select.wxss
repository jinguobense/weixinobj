/* Componet/select/select.wxss */
.com-selectBox{
    width: 100%;
    height: 100%;
    position: relative;
    
}
.com-sContent{
    background: #FBFBFB;
    font-size: 26rpx;
    position: relative;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
}
.com-sImg{
    position: absolute;
    right: 30rpx;
    top: 25rpx;
    width: 41rpx;
    height: 20rpx;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    box-sizing: border-box;
    padding-left: 27rpx;
    color: #333;
}
.com-sList{
    background: white;
    position: absolute;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    min-height: 70rpx;
    overflow: auto;
    width: 100%;
    box-shadow: 0rpx 3rpx 5rpx  rgba(9, 9, 9, 0.2);
}
.com-sItem{
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 6rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    width: 100%;
    color: #333;
     box-sizing: border-box;
    padding-left: 27rpx;
}
.com-sItem:first-child{
    border-top: none;
}